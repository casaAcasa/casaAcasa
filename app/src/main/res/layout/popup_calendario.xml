<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="71dp">

        <Button
            android:id="@+id/fechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:onClick="revisarFecha"
            android:text="Fecha Inicio:" />
        <TextView
            android:id="@+id/salidaFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 00/00/0000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="71dp">

        <Button
            android:id="@+id/horaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:onClick="revisarHora"
            android:text="Hora Inicio:" />
        <TextView
            android:id="@+id/salidaHoraInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 00/00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="71dp"
        android:layout_marginTop="90dp">

        <Button
            android:id="@+id/fechaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:onClick="revisarFecha"
            android:text="Fecha Final:" />
        <TextView
            android:id="@+id/salidaFechaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 00/00/0000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="71dp">

        <Button
            android:id="@+id/horaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:onClick="revisarHora"
            android:text="Hora Final:" />
        <TextView
            android:id="@+id/salidaHoraFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 00/00"/>
    </LinearLayout>
</LinearLayout>